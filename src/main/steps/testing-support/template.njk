{% extends "common/page.njk" %}

{% block page_content %}
  <h1 class="govuk-heading-l">{{ title }}</h1>
    <div class="grid-row">
      <div class="column-two-thirds">
        <div>
          <form action="/testing-support/create-draft">
            <button class="govuk-button" data-module="govuk-button">{{createDraft}}</button>
          </form>
        </div>
        <div>
          <form action="/testing-support/delete-draft">
            <button class="govuk-button" data-module="govuk-button">{{deleteDrafts}}</button>
          </form>
        </div>
      </div>
    </div>
  </h1>
{% endblock %}
