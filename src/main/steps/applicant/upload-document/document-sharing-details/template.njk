{% extends "common/template.njk" %}

{% block pageTitle %}
  {{ cardTitle }}
  {{ appName }}
{% endblock %}

{% block page_content %}
  <div class="app-inverted--card app-inverted-text govuk-!-margin-top-5">
    <h1 class="govuk-heading-l govuk-!-margin-bottom-7 app-inverted-text">{{cardTitle}}</h1>
    <p class="govuk-heading-m app-link--inverted">
      {{cardContent}}
    </div>

    <p class="govuk-body govuk-!-margin-top-6 govuk-!-margin-bottom-6">{{ bodyContent | safe }}</p>
  {% endblock %}