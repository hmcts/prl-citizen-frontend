{% extends "common/template.njk" %}

{% block page_content %}
  <div class="govuk-form-group">
    <h1 class="govuk-heading-xl">
    </h1>
    <div class=" govuk-!-margin-bottom-3">
      {% if section %}
        <span class="govuk-heading-l">{{ section }}</span>
      {% endif %}
      <div class="govuk-!-margin-bottom-4">
        
        <p class="govuk-body govuk-!-margin-left-7">{{legalRepresentativeInformationLine1}}</p>

        <p class="govuk-body govuk-!-margin-left-7">{{legalRepresentativeInformationLine2}}</p>

        <ul class="govuk-list govuk-list--bullet govuk-!-margin-left-7 govuk-!-margin-bottom-6">
          <li>{{legalRepresentativeInformationLine3}}{{userCase.id}}</li>
          <li>{{legalRepresentativeInformationLine4}}{{partyName}}</li>
        </ul>
        <p class="govuk-body govuk-!-margin-left-7">{{legalRepresentativeInformationLine5}}</p>

      </div>

    </div>
  </div>
{% endblock %}