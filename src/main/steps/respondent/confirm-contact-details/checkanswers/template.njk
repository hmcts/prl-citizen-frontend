{% extends "common/summary/template.njk" %}
{% block page_content %}
{% if section %}
    <span class="govuk-heading-xl govuk-!-margin-bottom-50px">{{ section }}</span>
  {% endif %}
  {% if title %}
    <h1 class="govuk-hint">{{ title }}</h1>
  {% endif %}
{% endblock %}

{% block form %}
  {% include "common/summary/form.njk"%}
  {% block after_fields %}
  <p class="govuk-hint">if you do not want to share your contact details with the other person in the case,update the section  <a href="/respondent/keep-details-private/details_known">keeping your contact details private </a></p>
  <h2 class="govuk-heading-m govuk-!-margin-top-9">{{submitApplication}}</h2>
  <p class="govuk-body">{{checkInfoBeforeSubmit}}</p>
{% endblock %}
{% endblock %}