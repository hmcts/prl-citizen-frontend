{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}
{% from "common/progress-bar.njk" import progressBar with context %}

{% extends "common/tasklist/template.njk" %}
{% block caseDetails %}
{% endblock %}

{% block columnFull %}
<div class="govuk-grid-column-full">
  <h1 class="govuk-heading-xl govuk-!-margin-bottom-4">
    {{respondentName}}
  </h1>
  <p class="govuk-body">{{caseNumber}}{{userCase.id}}</p>
</div>
{% endblock %}

{% block progressBar %}
  {{ progressBar(stages) }}
{% endblock %}

{% block notificationBanner %}
  {% include "../../common/notifyBanner.njk" %}
{% endblock %}
{% block oneThird %}
      <h2 class="govuk-heading-m">
        {{want}}
      </h2>
      <ul class="govuk-list">
        <li>
          <a class="govuk-link" href="#">{{findMyLocalCourt}}</a>
          <div class="govuk-!-padding-bottom-2"></div>
        </li>
        <li>
          <a class="govuk-link" href="https://www.gov.uk/find-legal-advice/find-legal-adviser" target="_blank">{{findLegalAdvice}}</a>
          <div class="govuk-!-padding-bottom-2"></div>
        </li>
        <li>
          <a class="govuk-link" href="https://helpwithchildarrangements.service.justice.gov.uk/" target="_blank">{{knowMoreAboutChildArrangements}}</a>
          <div class="govuk-!-padding-bottom-2"></div>
        </li>
        <li>
          <a class="govuk-link" href="https://helpwithchildarrangements.service.justice.gov.uk/going-to-court" target="_blank">{{knowMoreAboutAttendingCourt}}</a>
          <div class="govuk-!-padding-bottom-2"></div>
        </li>
      </ul>
        {% include "../../common/contact-us.njk" %}
{% endblock %}
