{% extends "common/template.njk" %}

{% block page_content %}
  {% block backLink %}{% endblock %}
  <main class="govuk-main-wrapper govuk-main-wrapper--l" id="main-content" role="main">

    <div class="govuk-panel govuk-panel--confirmation govuk-!-margin-bottom-6">
      <h1 class="govuk-panel__title">
        {{title}}
      </h1>
    </div>
    <p class="govuk-body">{{subContent}}</p>
    <p class="govuk-body govuk-!-margin-bottom-6">{{secondaryContent}}</p>
    <h2 class="govuk-notification-banner__heading">{{whatHappensNext}}</h2>
    <p class="govuk-body">{{childArrangementContent}}</p>
    <div class="govuk-button-group govuk-!-margin-top-8">
      <a class="govuk-button govuk-button" href="{{redirectUrl}}" data-module="govuk-button">
        {{secondaryBtnLabel}}
      </a>
    </div>
  </main>
{% endblock %}