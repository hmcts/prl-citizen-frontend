{% extends "common/template.njk" %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% block page_content %}
<h1 class="govuk-heading-xl govuk-!-margin-bottom-7">{{title}}</h1>
<p class="govuk-body">{{writtenAgreementDetails}}</p>
<p class="govuk-body">{{approvalDetails}}</p>
<a href="https://helpwithchildarrangements.service.justice.gov.uk/" class="govuk-link govuk-body-m" rel="external" target="_blank">{{findOut}}</a><br/><br/><br/>

<form method="post" novalidate>
  {{ govukRadios({
      classes: field.classes,
      idPrefix: field.id if field.id else fieldName,
      name: fieldName,
      fieldset: {
        legend: {
          text: field.legend.text,
          classes: field.legend.classes
        }
      },
      items: formItems(field.values, userCase[fieldName]),
      errorMessage: getError(fieldName),
      formGroup: {
        classes: "hidden " + field.id if field.hidden else field.id
      }

    }) }}
</form>
{% endblock %}
