{% extends "common/template.njk" %}
{% block page_content %}
<h1 class="govuk-heading-xl govuk-!-margin-bottom-7">{{title}}</h1>
<p class="govuk-body">{{writtenAgreementDetails}}</p>
<p class="govuk-visually-hidden">{{writtenAgreementDetails.label}}</p>
<p class="govuk-body">{{approvalDetails}}</p>
<a href="https://helpwithchildarrangements.service.justice.gov.uk/" class="govuk-link govuk-body-m" rel="external" target="_blank">{{findOut}}</a><br/><br/><br/>
  {{ form | safe }}
  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const legend = document.querySelector('#sq_writtenAgreement-fieldset legend.hidden');
      if (legend) {
        legend.classList.remove('hidden');
        legend.classList.add('govuk-visually-hidden');
      }
    });
  </script>
{% endblock %}
