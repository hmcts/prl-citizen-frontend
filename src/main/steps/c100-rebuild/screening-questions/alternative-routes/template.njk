{% extends "common/template.njk" %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}

{% block page_content %}
    <h1 class="govuk-heading-l govuk-!-margin-bottom-7">{{ title }}</h1>
    <p class="govuk-body">{{ ncdrDescription }}</p>
    <p class="govuk-body">{{ ncdrCould }}</p>
    <ul class="govuk-list govuk-list--bullet">
        {% for item in ncdrCouldList %}
            <li>{{ item }}</li>
        {% endfor %}
    </ul>
    <div class="govuk-body">{{ mediatorHelp }}</div>
    <div class="govuk-body">{{ findMoreInformation | safe }}</div>

    <h2 class="govuk-heading-m">{{ ncdrTypes }}</h2>
    <div class="govuk-body">{{ youCouldTry }}</div>
    <ul class="govuk-list govuk-list--bullet">
        {% for item in youCouldTryList %}
            <li>{{ item | safe }}</li>
        {% endfor %}
    </ul>

    <h3 class="govuk-heading-s">{{ helpTowardsMediationSubTitle}}</h3>
    <div class="govuk-body govuk-!-padding-bottom-8">{{ helpTowardsMediation | safe}}</div>
{% endblock %}