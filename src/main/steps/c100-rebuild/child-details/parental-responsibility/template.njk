{% extends "common/template.njk" %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% block page_content %}
<h1 class="govuk-heading-xl">{{pageTitle}} {{childDetails.firstname}}  {{childDetails.lastname}}  </h1>
<h1 class="govuk-label-wrapper"> <label class="govuk-label" for="parentalResponsibility"> {{labelText}}</label></h1>
<div id="parentalResponsibility-hint" class="govuk-hint">{{hintText | safe}}</div>
                <form method="post" action="{{postURL}}">

                            {{ govukInput({
                            id: "csrfToken",
                            name: "_csrf",
                            type: "hidden",
                            value: csrfToken
                            }) }}
                            {{ govukInput({
                            label: {
                                text: "",
                                classes: "govuk-input govuk-input--width-20",
                                isPageHeading: true
                            },
                            id: "parental_responsibility",
                            name: "parentalResponsibility",
                            value: parentialResponsbilityStatement
                            }) }}
                            <div class="govuk-form-group">
                            <div class="govuk-button-group">
                                {{ govukButton({
                                    text: "Contiue"
                                    }) }}
                                {{ govukButton({
                                    text: "Save and come back later",
                                    classes: "govuk-button--secondary"
                                    }) }}   
                            </div>
                            </div>
                </form>
{% endblock %}