{% extends "common/template.njk" %}
{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% from "govuk/components/input/macro.njk" import govukInput %}
{% from "govuk/components/fieldset/macro.njk" import govukFieldset %}
{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/date-input/macro.njk" import govukDateInput %}
{% from "govuk/components/radios/macro.njk" import govukRadios %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}

{% block page_content %}
<h1 class="govuk-heading-xl">{{pageTitle}} {{childDetails.firstname}}  {{childDetails.lastname}}  </h1>
<div class=" {%- if sessionErrors.length > 0 %} govuk-form-group--error  {% endif %}">
<h1 class="govuk-label-wrapper"> <label class="govuk-label" for="parentalResponsibility"> {{labelText}}</label></h1>
<div id="parentalResponsibility-hint" class="govuk-hint ">{{hintText | safe}}</div>
                <form method="post" action="{{postURL}}">
                {%- if sessionErrors.length > 0 %}  <span class="govuk-error-message" id="steps-children-parental-responsibility-form-parental-responsibility-error"><span class="govuk-visually-hidden">Error: </span>{{errors.parentalResponsibility.required}}</span>{% endif %}
                {% set errorToggleClass = ""%}
                {%- if sessionErrors.length > 0 %}
                {% set errorToggleClass = "govuk-input--error"%}
                {% endif %}

                            {{ govukInput({
                            id: "csrfToken",
                            name: "_csrf",
                            type: "hidden",
                            value: csrfToken
                            }) }}
                            {{ govukInput({
                            label: {
                                text: "",
                                classes: "govuk-input govuk-input--width-20 govuk-input--error",
                                isPageHeading: true
                            },
                            id: "parentalResponsibility",
                            name: "parentalResponsibility",
                            value: parentialResponsbilityStatement,
                            classes: errorToggleClass
                            }) }}
                            </div>
                            <div class="govuk-form-group">
                            <div class="govuk-button-group">
                                {{ govukButton({
                                    text: "Continue"
                                    }) }}
                                {{ govukButton({
                                    text: "Save and come back later",
                                    classes: "govuk-button--secondary"
                                    }) }}   
                            </div>
                            </div>
                            
                </form>
{% endblock %}