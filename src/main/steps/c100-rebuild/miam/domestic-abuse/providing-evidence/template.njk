{% extends "common/template.njk" %}

{% block page_content %}
  <h1 class="govuk-heading-l">
    <span class="govuk-caption-m">{{ caption }}</span>
    {{ title }}
  </h1>
  <p class="govuk-body govuk-!-margin-bottom-2">{{ content }}</p>

  {% for abuseReason in listOfAbuseReasons %}
    <h2 class="govuk-heading-s govuk-!-margin-bottom-1">{{ abuseReason.abuseEvidenceType }}</h2>
    {% if abuseReason.abuseEvidenceReasons %}
      <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-2">
        {% for evidence in abuseReason.abuseEvidenceReasons %}
          <li>{{ evidence }}</li>
        {% endfor %}
      </ul>
    {% endif %}
  {% endfor %}
  <br/>
{% endblock %}