{% extends "common/template.njk" %}


{% block page_content %}
<span class="govuk-caption-xl">{{caption}}</span>
<h1 class="govuk-heading-xl govuk-!-margin-bottom-7">{{headingTitle}}</h1>
<p class="govuk-body-m">{{p1}}</p>
<ul class="govuk-list govuk-list--bullet">

  {%if userCase['contactDetailsPrivate'] and userCase['contactDetailsPrivateAlternative']  === undefined %}
      {% for details in userCase['contactDetailsPrivate'] %}
                {% if details === "address" %}
                <li>{{address}}</li>
                {% elif details === "homephone"  %}
                <li>{{homePhone}}</li>
                {% elif details === "mobilephone"  %}
                <li>{{mobilePhone}}</li>
                {% elif details === "email"%}
                <li>{{email}}</li>
                {% else %}
              {% endif %}
        {% endfor %}
  {%endif%}


  {%if userCase['contactDetailsPrivateAlternative'] and userCase['contactDetailsPrivate'] === undefined  %}
      {% for privateDetails in userCase['contactDetailsPrivateAlternative'] %}
                {% if  privateDetails === "address" %}
                <li>{{address}}</li>
                {% elif privateDetails === "homephone" %}
                <li>{{homePhone}}</li>
                {% elif  privateDetails === "mobilephone" %}
                <li>{{mobilePhone}}</li>
              {% elif privateDetails === "email"%}
                <li>{{email}}</li>
                {% else %}
              {% endif %}
      {% endfor %}
  {%endif%}


</ul>
<h2 class="govuk-heading-m">{{heading3}}</h2>
<p class="govuk-body-m govuk-!-margin-bottom-9">{{p2}}</p>
{% endblock %}
