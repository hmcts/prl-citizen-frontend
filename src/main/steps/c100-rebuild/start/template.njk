{% from "govuk/components/inset-text/macro.njk" import govukInsetText %}
{% extends "common/page.njk" %}

{% block page_content %}
    <h1 class="govuk-heading-xl">
        <span class="govuk-caption-l">{{caption}}</span>
        {{title}}
    </h1>

    <p class="govuk-body">{{ content1}}</p>

    <p class="govuk-body">{{ content2 | safe }}</p>

    <ul class="govuk-list govuk-list--bullet">
        {% for item in list %}
            <li>{{ item.content }}</li>
        {% endfor %}
    </ul>

    <h2 class="govuk-heading-m">{{ content3 }}</h2>

    <p class="govuk-body">{{ content4}}</p>

    <ul class="govuk-list govuk-list--bullet">
        {% for item in list2 %}
            <li>{{ item.content | safe }}</li>
        {% endfor %}
    </ul>

    <p class="govuk-body">{{ content5}}</p>

    {% if (isFeeAvailable === true) %}
        {{ govukInsetText({
            html: content6
        }) }}
        {% endif%}

    {% endblock %}
