
{% extends "common/template.njk" %}

{% block page_content %}
  <span class="govuk-caption-l">{{ caption }}</span>
  {% if title %}
    <h1 class="govuk-heading-l">{{ title }}</h1>
  {% endif %}

  <p class="govuk-body govuk-!-margin-bottom-2">{{ applyBefore }}</p>
  <h3 class="govuk-heading-m govuk-!-margin-bottom-2">{{ nextSteps }}</h3>
  <ol class="govuk-list govuk-list--number">
    <li>{{ line1 | safe }}</li>
    <li>{{ line2 }} {{applicationType}} {{enterCourtNumber}}</li>
    <li>{{ line3 }}</li>
    <li>{{ line4 }} {{applicationType}} {{applicationTo}} {{ caption | lower }}</li>
    <li class="govuk-!-margin-bottom-6">{{ line5 }}</li>
  </ol>

{% endblock %}
