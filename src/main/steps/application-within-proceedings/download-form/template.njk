{% extends "common/template.njk" %}

{% block page_content %}
  <span class="govuk-caption-l">{{ caption }}</span>
  {% if title %}
    <h1 class="govuk-heading-l">{{ title }} {{ applicationType }}</h1>
  {% endif %}

  <p class="govuk-body-m">{{explainRequest}} {{ applicationType }}.<p>
  <h3 class="govuk-heading-m govuk-!-margin-bottom-4">{{ nextSteps }}</h3>
  <ol class="govuk-list govuk-list--number">
    {% for bulletPoint in bulletPoints %}
      <li>{{ bulletPoint | safe}}</li>
    {% endfor %}
  </ol>
  <div class="govuk-warning-text govuk-!-margin-bottom-4">
    <span class="govuk-warning-text__icon" aria-hidden="true">!</span>
    <strong class="govuk-warning-text__text govuk-!-margin-bottom-4">
      <span class="govuk-warning-text__assistive">{{warning}}</span>
      {{warningText}}
    </strong>
  </div>


{% endblock %}