{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}
{% extends "common/summary/template.njk" %}
{% block page_content %}

{% if paymentError.hasError === true %}
  {{ govukErrorSummary({
    titleText: errors.paymentError.title,
    errorList: [
      {
        html: "<h2 class='govuk-heading-s hmcts-badge--red'>"+errors.paymentError[paymentError.errorContext]+"</h2>"
      }
    ]
  }) }}
{% endif %}

{% if title %}
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-50px">{{ title }}</h1>
  {% endif %}
  <div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
      <legend class="govuk-fieldset__legend govuk-visually-hidden">{{ title }}</legend>
      <p class="govuk-body">{{caseNumber}} {{userCase.id}}</p>
    </fieldset>
  </div>
  {% block page_contact_us %}
 {% endblock %}
{% endblock %}
