{% extends "common/page.njk" %}
{% from "common/breadcrumb/breadcrumb.macro.njk" import appBreadcrumb with context %}

 {% block backLink %}
    
  {% endblock %}

{% block page_content %}
    <div class="govuk-grid-column-full">
       {{appBreadcrumb(breadcrumbs)}}
      <h1 class="govuk-heading-xl">
        {{title}}
      </h1>

      <div class="govuk-form-group">
        <fieldset class="govuk-fieldset">
          <p class="govuk-body">{{caseNumber}}&nbsp;&nbsp;{{caseId}}</p>
          <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
        </fieldset>
      </div>

      <ol class="app-task-list">
        {% for section in sections %}
          <li>
            <h2 class="app-task-list__section">
              {{section.title}}
            </h2>
            <ul class="app-task-list__items">
              {% for item in section.items %}
                <li class="app-task-list__item">
                  <span class="app-task-list__task-name">
                    <a id="{{item.categoryId}}" class="govuk-link" href="{{item.link.url}}" aria-describedby="{{item.categoryId}}-status">
                      {{item.link.text}}
                    </a>
                  </span>
                </li>
              {% endfor %}
            </ul>
          </li>
        {% endfor %}
      </ol>
    </div>
{% endblock %}