{% extends "common/template.njk" %}

{% block page_content %}

  {% if section %}
    <h1 class="govuk-heading-xl govuk-!-margin-top-6">{{ section }}</h1>
  {% endif %}

  <p class="govuk-body">{{ caseNumber }} #{{ userCase.id }}</p>
  <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
  <h3 class="govuk-heading-l">{{ yourPreviousHearings }}</h3>

  <dl class="govuk-summary-list govuk-summary-list--no-border govuk-!-margin-left-9">

    {% for item in userCase.hearingCollection %}

      {% for previousHearing in item.prev %}
        <div>
          <h4 class="govuk-heading-m govuk-!-margin-left-9">{{ ordinalNumberMap.get(loop.revindex) }} {{ hearing }}</h4>
        </div>

        <dl class="govuk-summary-list govuk-summary-list--no-border govuk-!-margin-left-9">
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              {{ hearingDate }}
            </dt>
            <dd class="govuk-summary-list__value">
              {{previousHearing.date}}
            </dd>
          </div>  
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              {{ hearingTime }}
            </dt>
            <dd class="govuk-summary-list__value">
              {{previousHearing.time}}
            </dd>

          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              {{ typeOfHearing }}
            </dt>
            <dd class="govuk-summary-list__value">
              {{previousHearing.typeOfHearing}}
            </dd>

          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              {{ courtName }}
            </dt>
            <dd class="govuk-summary-list__value">
              {{previousHearing.courtName}}
            </dd>

          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              {{ courtAddress }}
            </dt>
            <dd class="govuk-summary-list__value">
              {{previousHearing.courtAddress}}
              <br><a href="#">{{ usefulDocumentsMap }}</a>
            </dd>

          </div>
          <div class="govuk-summary-list__row">
            <dt class="govuk-summary-list__key">
              {{ hearingOutcome }}
            </dt>
            <dd class="govuk-summary-list__value">
              <a href="#">{{previousHearing.hearingOutcome}}</a>
            </dd>
          </div>
        </dl>

        <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">
      {% endfor %}

    {% endfor %}

  </dl>

  <hr class="govuk-section-break govuk-section-break--m govuk-section-break--visible">

{% endblock %}