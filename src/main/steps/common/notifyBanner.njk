{% extends "./page.njk" %}
{% from "govuk/components/notification-banner/macro.njk" import govukNotificationBanner %}

{% block page_content %}
{% set html %}
  {% if bannerHeading %}
    <p class="govuk-notification-banner__heading">
      {{ bannerHeading }}
      {% if bannerHeadingLink %}
      <a class="govuk-notification-banner__link" href={{ bannerHeadingLink }}>{{bannerHeadingLinkText}}</a>.
      {% endif %}
    </p>
  {% endif %}

  {% for content in bannerContent %}
    <p class="govuk-notification-banner__content">{{ bannerContent.line1 }}</p>
    <p class="govuk-notification-banner__content">{{ bannerContent.line2 }}</p>
  {% endfor %}

  {% for link in bannerLinks %}
    <a class="govuk-notification-banner__link" href={{ link.href }}>{{link.text}}</a>.
  {% endfor %}
{% endset %}

{{ govukNotificationBanner({
  html: html
}) }}

{% endblock %}
