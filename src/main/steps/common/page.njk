{% from "govuk/components/phase-banner/macro.njk" import govukPhaseBanner %}
{% from "govuk/components/footer/macro.njk" import govukFooter %}
{% from "govuk/components/details/macro.njk" import govukDetails %}


{% extends "govuk/template.njk" %}

{% block head %}
  {% include "./webpack/css.njk" %}
{% endblock %}

{% block header %}
  {% include "../cookie-banner/template.njk" %}
  {{ govukHeader({
    containerClasses: "govuk-width-container",
    serviceName: serviceName,
    serviceUrl: (globals.basePath if globals.basePath) + "/",
    navigation: [
      {
        href: "/logout" if isLoggedIn else "/",
        text: signOut if isLoggedIn
      }
    ]
  
  }) }}
{% endblock %}


{% block pageTitle %}
  {{ serviceName }} - {{ title }} - {{ govUk }}
{% endblock %}

{% block beforeContent %}
  {{ govukPhaseBanner({
    tag: {
      text: phase
    },
    html: feedback + languageToggle
  }) }}

{% endblock %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <a href="#" class="govuk-back-link govuk-!-margin-bottom-9">{{ back }} </a>


      {% block error_summary %}
        {% include "common/error/summary.njk" %}
      {% endblock %}

      {% block page_content %}
        {% if title %}
          <h1 class="govuk-heading-l govuk-!-margin-bottom-5">{{ title }}</h1>
        {% endif %}
       
      {% endblock %}
      
      {% if form %}
        {% block form %}
          {% include "common/form/form.njk"%}
        {% endblock %}
      {% endif %}

      {% block page_content_under_form %}
      {% endblock %}
    </div>
    <div class="govuk-grid-column-one-third">
    {{ govukDetails({
  summaryText: "Contacts for help",
  text: "
   			 Ask a question or get any help in any language
   			 <p class='govuk-body govuk-!-font-weight-bold'>Telephone</p>
   			 <p class='govuk-body govuk-!-font-weight-regular'>0300 303 0742</p>
   			 <p class='govuk-body govuk-!-font-weight-regular'>Monday to Friday, 8am to 8pm</p>
   			 <a href='#' class='govuk-link'>Find out about call charges</a>
   			 <p class='govuk-body govuk-!-font-weight-regular'>(opens in a new window)</p>
			  " | safe
}) }}
    </div>
  </div>
{% endblock %}

{% block footer %}
  {{ govukFooter({
    meta: {
      items: [
        {
          href: "/cookies",
          text: cookies
        },
        {
          href: "/privacy-policy",
          text: privacyPolicy
        },
        {
          href: "/accessibility-statement",
          text: accessibility
        },
        {
          href: "/terms-and-conditions",
          text: termsAndConditions
        }
      ]
    }
  }) }}
{% endblock %}

{% block bodyEnd %}
  {# Run JavaScript at end of the <body>, to avoid blocking the initial render. #}
  {% include "./webpack/js.njk" %}
{% endblock %}
