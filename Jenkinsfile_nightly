#!groovy

properties([
  pipelineTriggers([cron('0 1 * * 1-5')]),
  parameters([
    string(name: 'TEST_URL', defaultValue: 'https://privatelaw.aat.platform.hmcts.net', description: 'The URL you want to run tests against'),
  ])
])

@Library("Infrastructure")

import uk.gov.hmcts.contino.AppPipelineConfig

def type = "nodejs"
def product = "prl"
def component = "citizen-frontend"

def yarnBuilder = new uk.gov.hmcts.contino.YarnBuilder(this)

static LinkedHashMap<String, Object> secret(String secretName, String envVar) {
  [$class     : 'AzureKeyVaultSecret',
   secretType : 'Secret',
   name       : secretName,
   version    : '',
   envVariable: envVar
  ]
}

def secrets = [
  'prl-${env}': [
    secret("AppInsightsInstrumentationKey", "APP_INSIGHTS_INSTRUMENTATION_KEY"),
    secret('prl-cos-idam-client-secret', 'IDAM_SECRET'),
    secret('microservicekey-prl-cos-api', 'SERVICE_AUTH_SECRET')
  ]
]

def pipelineConf = new AppPipelineConfig()
pipelineConf.vaultSecrets = secrets

withNightlyPipeline(type, product, component) {
  disableLegacyDeployment()
  loadVaultSecrets(secrets)
  syncBranchesWithMaster(branchesToSync)

  after('build') {
    yarnBuilder.yarn('build')
  }
}

